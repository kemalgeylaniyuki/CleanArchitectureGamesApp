<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.yukigames.presentation.main.views.pages.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.yukigames.presentation.main.views.pages.FavoritesFragment"
        android:label="FavoritesFragment" >
        <action
            android:id="@+id/action_favoritesFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.yukigames.presentation.main.views.pages.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.yukigames.presentation.game_details.view.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.yukigames.presentation.main.views.pages.CategoriesFragment"
        android:label="CategoriesFragment" >
        <action
            android:id="@+id/action_categoriesFragment_to_gamesByGenreFragment"
            app:destination="@id/gamesByGenreFragment" />
    </fragment>
    <fragment
        android:id="@+id/gamesByGenreFragment"
        android:name="com.example.yukigames.presentation.games_by_genre.view.GamesByGenreFragment"
        android:label="GamesByGenreFragment" >
        <action
            android:id="@+id/action_gamesByGenreFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

        <argument
            android:name="genre"
            app:argType="string" />
    </fragment>
</navigation>